<aura:component >
    <aura:attribute name="items" type="Object" required="true"></aura:attribute>
    <aura:registerEvent name="DragDropEvent" type="c:DragDropEvent"/>
    
    <div class="column" ondrop="{!c.onDrop}" ondragover="{!c.allowDrop}">
        <div class="panel">
            <div class="panel-heading">
                Visit Plans
            </div>
            <div class="panel-block column">                            
                <div class="demo-only demo-only--sizing slds-grid slds-wrap">
                    <aura:iteration items="{!v.items}" var="item">
                        <div class="slds-size_1-of-3">
                            <div class="slds-box slds-box_x-small slds-text-align_left slds-m-around_x-small">
                                <c:Visit item="{!item}"></c:Visit>
                            </div>
                        </div>
                    </aura:iteration>    
                </div>
            </div>
        </div>
    </div>
</aura:component>